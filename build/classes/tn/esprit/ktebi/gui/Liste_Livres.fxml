<AnchorPane id="AnchorPane" prefHeight="734.0" prefWidth="1252.0" stylesheets="@design.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.ktebi.gui.Liste_LivresController">
   <children>
       
     <fx:include source="sidebarAdmin.fxml" />
      <Label layoutX="27.0" layoutY="14.0" prefHeight="42.0" prefWidth="316.0" text="Liste des livres" textFill="#4275dc" underline="true">
         <font>
            <Font name="System Bold" size="37.0" />
         </font>
      </Label>
      <TableView fx:id="tvLivres" layoutX="323.0" layoutY="151.0" prefHeight="386.0" prefWidth="720.0">
        <columns>
          <TableColumn fx:id="libelle" prefWidth="204.0" text="Libelle" />
            <TableColumn fx:id="categorie" prefWidth="177.0" text="Catégorie" />
            <TableColumn fx:id="prix" prefWidth="184.0" text="Prix" />
            <TableColumn fx:id="date" prefWidth="153.0" text="Date d'édition" />
        </columns>
      </TableView>
      <Button fx:id="btnRedirectionAjout" layoutX="372.0" layoutY="557.0" mnemonicParsing="false" onAction="#RedirectionAjout" text="Ajouter Livre" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
      <Button fx:id="btnDetail" layoutX="696.0" layoutY="557.0" mnemonicParsing="false" onAction="#detailLivre" text="Détail Livre" textFill="WHITE">
