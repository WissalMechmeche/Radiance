            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="btnSupprimer" layoutX="837.0" layoutY="557.0" mnemonicParsing="false" onAction="#SupprimerLivre" text="Supprimer Livre" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="btnModifier" layoutX="526.0" layoutY="557.0" mnemonicParsing="false" onAction="#modifierLivre" text="Modifier Livre" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      
      <TextField fx:id="tfRecherche" layoutX="673.0" layoutY="81.0" prefHeight="42.0" prefWidth="295.0" promptText="Rechercher ici" />
      <Button fx:id="btnRechercher" layoutX="978.0" layoutY="86.0" mnemonicParsing="false" onAction="#chercherLivre" text="Rechercher">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <ComboBox fx:id="combo" layoutX="323.0" layoutY="87.0" prefWidth="150.0" promptText="Tous les livres" />
   </children>
</AnchorPane>
